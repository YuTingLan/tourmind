                <%= form.hidden_field :TradeInfo, value: mpg[:TradeInfo]%>
                <%= form.hidden_field :TradeSha, value: mpg[:TradeSha]%>
                <%= form.hidden_field :Version, value: mpg[:Version]%>
                <%= form.submit "Buy Now", class: "w-full py-2 text-indigo-100 duration-75 bg-indigo-600 rounded-md hover:bg-indigo-500 hover:shadow-md" %>
            <% end %>
            <hr class="mx-auto my-4 border-t-2 border-gray-300">
            <ul>
                <li class="">收藏 3 個行程規劃</li>
