<section class="relative flex flex-wrap w-full h-screen">
    <div class="flex items-center justify-center w-full">
        <h1 class="text-3xl font-black ">選擇
            <span class="space-x-0 align-middle text-amber-500 cloitems-center inlink-block tracking-zero">Tour</span>
            <span class="items-center align-middle inlink-block text-sky-500 tracking-zero">Mind</span>
        的升級方案</h1>
    </div>
    <div class="flex items-center justify-center w-full gap-3 px-4 bg-indigo-50">
        <div class="max-w-sm mx-2 overflow-hidden duration-200 bg-white shadow-md rounded-xl hover:scale-105 hover:shadow-xl">
            <div class="p-5">
            <%= image_tag "free", class: "m-auto" %>
            <h2 class="mt-2 mb-5 font-semibold text-center text-gray-700 text-medium">一般會員</h2>
            <p class="mb-5 text-xl font-medium text-center text-gray-700 text-medium">$0 <span class="text-xs">/year</span></p>
            <button class="w-full py-2 text-indigo-100 duration-75 bg-indigo-600 rounded-md hover:bg-indigo-500 hover:shadow-md">
                <%=  link_to "Free", root_path %>
            </button>
            <hr class="mx-auto my-4 border-t-2 border-gray-300">
            <ul>
                <li>收藏 1 個行程規劃</li>
            </ul>
            </div>
        </div>
        <div class="max-w-sm mx-2 overflow-hidden duration-200 bg-white shadow-md rounded-xl hover:scale-105 hover:shadow-xl">
            <div class="p-5">
            <%= image_tag "diamond-white", class: "m-auto" %>
